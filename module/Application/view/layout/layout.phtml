    <script>
        $(document).ready(function() {
            $('#clock').clock({
                lang         : 'uz',
                weakNameType : 'long'
            });

            $('.mk-calendar').datetimepicker({
                inline              : true,
                dayViewHeaderFormat : 'YYYY MMMM',
                format              : 'DD/MM/YYYY'
            });

            var _applicationMistakes = new Grammar();
            var _selectionMenu       = $('<div role="tooltip" class="popover fade top in" id="selection-menu"><div class="arrow" style="left: 50%;"></div><h3 class="popover-title" style="display: none;"></h3><div class="popover-content" style="padding:5px;"><button class="btn btn-raised btn-info" style="margin:0;padding:2px 7px;text-transform:none;" id="report-mistake"><i class="fa fa-check-square-o"></i></button><button class="btn btn-raised btn-info" style="margin:0 0 0 10px;padding:2px 7px;text-transform:none;" id="btn-reader"><i class="fa fa-volume-up"></i></button></div></div>');

            $('body').append(_selectionMenu);
            _selectionMenu.hide();

            _applicationMistakes.addEventListener(function(text){
                // on select
                if (_applicationMistakes.modalVisibility) {
                    return;
                }

                var coords = _applicationMistakes.getSelectionCoords();

                _selectionMenu.css({
                    'position': 'absolute',
                    'top'     : (coords.y + $(window).scrollTop()) - _selectionMenu.height(),
                    'left'    : coords.x
                });

                _selectionMenu.show();
            }, function(){
                // on cancel or e.g
                if(_selectionMenu.jquery)
                    _selectionMenu.hide();

                _applicationMistakes.cancelSelection();
            });

            $('body').on('click', '#report-mistake', function(){
                _selectionMenu.hide();
                _applicationMistakes.cancelSelection();
                _applicationMistakes.modalVisibility = true;

                $('#typo-rep').modal('show');
                $('#mistaken-text').val(_applicationMistakes.lastSelection);
            });

            $('#typo-rep').on('hide.bs.modal', function(){
                _applicationMistakes.modalVisibility = false;
            });

            $('#mistakes-form').submit(function(e){
                e.preventDefault();

                var form     = $(this);
                var sendData = form.serialize();

                $.ajax({
                    type: form.attr('method'),
                    url: form.attr('action'),
                    data: sendData,
                    success: function() {
                        alert('<?php echo str_replace("'", "", $this->translate('Report was sended. Thank you for your support.')) ?>');
                        $('#typo-rep').modal('hide');
                    },
                    error: function() {
                        alert('<?php echo str_replace("'", "", $this->translate('Error encountered while sending report.')) ?>');
                    },
                });
            });

            var narrator = new Narrator({
                requestUrl : '<?php echo $this->url('application/default', ['locale' => $this->currentLocale(), 'controller' => 'narrator', 'action' => 'speak']); ?>',
                csrfToken  : '<?php echo \Application\Controller\NarratorController::getCsrfToken($this->serverUrl(true)) ?>'
            });

            $('#btn-reader').on('click', function() {
                var text = _applicationMistakes.lastSelection;

                if (text != "") {
                    narrator.speak(text);
                }
            });

            $(narrator).on('onrequest', function() {
                $('#btn-reader>i').removeClass('fa-volume-up').addClass('fa-spinner fa-spin');
            });

            $(narrator).on('onerror', function() {
                $('#btn-reader>i').addClass('fa-volume-up').removeClass('fa-spinner fa-spin');
            });

            $(narrator).on('onspeakend', function() {
                $('#btn-reader>i').addClass('fa-volume-up').removeClass('fa-spinner fa-spin');
            });
        });

        (function(window, document, $) {
            $(window).load(function() {
                $('#weather').trigger('change');
