                var data   = [];

                $.ajax({
                    type: 'get',
                    url: '<?php echo $this->url("weather/getall", ["locale" => $this->currentLocale()]) ?>',
                    success: function(event, xhr, settings) {
                        var template = String() + '<option value="qarshi" style="text-transform: uppercase;">Qarshi</option>';

                        $.each(event.weather, function(key, value) {
                            template += '<option value="' + key + '" style="text-transform: uppercase;">' + value.city.title + '</option>';
                        });

                        $('#weather').html(template);
                    },
                    error: function() {
                        console.log("error");
                    }
                });

                $('#weather').change(function() {
                    var lang   = window.location.href.split('/').reverse();
                    var locale = lang[0];
                    var attr   = $('.weather');
                    var $data  = {};
                    var template = String();
                    var city = '';

