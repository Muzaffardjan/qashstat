                                g = '+ ' + data.air_t.toFixed();
                            }

                            template += '<h2 class="text-center">' + data.city.title + '</h2>' +
                                        '<div>' +
                                            '<div class="pull-right">' +
                                                '<span style="font-size: 50px;">' + g + ' °C</span>' +
                                            '</div>' +
                                            '<div>' +
                                                '<img src="http://meteo.uz/img/weather-icons/wi_' + 
                                                    data.weather_code + 
                                                    '_' + 
                                                    data.time_of_day + 
                                                    '.png" class="img-responsive">' +
                                            '</div>' +
                                            '<div><strong>Oxirgi yangilanish:</strong><br> ' + data.datetime + '</div>'+
                                        '</div>';

                            attr.html(template);
                        },
                        error: function() {
                            console.log("error");
                        }
                    });
                });
            });

            $('.owl-carousel').owlCarousel({
